<body>
    <header class="header">
        <h1>Playlists</h1>

        <!-- works without JS -->
        <form method="GET" action="/playlist" class="search-container">
            <label for="searchBar">Search Playlists</label>
            <input
                type="text"
                id="searchBar"
                name="q"
                value="{{ request.params.q }}"
                placeholder="Search playlists..."
            />
            <button type="submit">Search</button>
        </form>

        <nav class="filters">
            <button class="animal">Animal</button>
            <button class="season">Season</button>
            <button class="language">Language</button>
            <button class="sorting">Sorting</button>
        </nav>
    </header>

    <main id="playlistList">
        {% for playlist in playlists %}
        <article class="playlist-card" data-name="{{ playlist.name | downcase }}" data-lang="{{ playlist.language }}">

            {% if playlist.image %}
            <img src="https://fdnd-agency.directus.app/assets/{{ playlist.image }}?width=112&height=95" alt="Image of {{ playlist.name }}">
            {% else %}
            <img src="/assets/pinguin.png" alt="Default playlist image"> 
            {% endif %}

            <div class="playlist-card-content">
                <h2>{{ playlist.name }}</h2>
                <p>{{ playlist.description }}</p>
            </div>

            <button class="play-button">
                <span class="play-text"> â–¶ {{ playlist.name }}</span>
                <span class="loading-spinner" aria-hidden="true">
                  <svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 200 200'>
                    <linearGradient id='a7'>
                      <stop offset='0' stop-color='#FFFFFF' stop-opacity='0'></stop>
                      <stop offset='1' stop-color='#FFFFFF'></stop>
                    </linearGradient>
                    <circle fill='none' stroke='url(#a7)' stroke-width='15' stroke-linecap='round'
                      stroke-dasharray='0 44 0 44 0 44 0 44 0 360' cx='100' cy='100' r='70'
                      transform-origin='center'>
                      <animateTransform type='rotate' attributeName='transform' calcMode='discrete'
                        dur='2s' values='360;324;288;252;216;180;144;108;72;36' repeatCount='indefinite' />
                    </circle>
                  </svg>
                </span>
              </button>
              
            <form method="POST" action="/like/{{ playlist.id }}" class="like-form">
                <button type="submit" class="like-button">
                    <svg class="heart" viewBox="0 0 24 24">
                        <title>Like</title>
                        <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 
                                 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 
                                 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 
                                 6.86-8.55 11.54L12 21.35z" />
                    </svg>
                    Like
                </button>
            </form>
        </article>
        {% endfor %}
    </main>
    <script>
        const playButtons = document.querySelectorAll(".play-button");
      
        playButtons.forEach(button => {
          button.addEventListener("click", function () {
            // Prevent multiple clicks
            if (button.classList.contains("loading")) return;
      
            button.classList.add("loading");
      
            setTimeout(() => {
              button.classList.remove("loading");
              alert("Playing playlist: " + button.querySelector(".play-text").textContent);
            }, 2000);
          });
        });
      </script>
      

    {% include 'partials/foot.liquid' %}
</body>
